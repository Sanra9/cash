
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h1>Currencies</h1>
            <table class='table'>
                <tr>
                    <th>Currency</th>
                    <th>Price buy</th>
                    <th>Price sale</th>
                </tr>
                <% @currencies.each do |currency| %>    
                <tr>
                    <th><%= currency.name %></th>
                    <th><%= currency.price_buy %></th>
                    <th><%= currency.price_sale %></th>
                </tr>
                <% end %>
            </table>
        </div>
        <div class='text-right'>
        <%= link_to 'Add Currency', new_currency_path, class: 'btn btn-primary'%>
        </div>
    </div>
</div>